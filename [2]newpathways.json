{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"height": 400,
"width": 380,
 "title": {
      "text": "Figure 2: Number of new pathways 2019-21",
      "subtitle": "Source: NHS Digital's RTT Waiting Times Data.",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black"
 },

"data": { 
    "url": "https://raw.githubusercontent.com/rosieneville/rosieneville.github.io/main/%5B2%5Dnewpathways_total.csv"
},

"transform": [
  
      {"filter": {"field": "Year", "oneOf": ["2019", "2020", "2021"]}}
    ],

"layer": [
  {        
"mark": {"type": "line", "size":3},
"encoding":{
    "x":{
        "field": "Month",
        "type": "ordinal",
        "title": null,
        "sort": ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov"]
        },

    "y": {"field": "NewReferrals",
    "type": "quantitative",
    "title": "",
     "axis":{"grid": false}
        },
    
    "color":{
        "field": "Year",
        "type": "nominal",
        "scale": {"range": [ "#FDFD96", "#F47174",  "#93CAED"]},         "legend": {"orient": "bottom-right", "title": null}
          }
  }
  },

  {
"mark": {"type": "circle", "size": 100, "opacity": 1},
"encoding":{
    "x":{
        "field": "Month",
        "type": "ordinal",
        "sort": ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov"]
        },

    "y": {"field": "NewReferrals",
    "type": "quantitative"
        },  

        "color":{
        "field": "Year",
        "type": "nominal",
        "scale": {"range": [ "#FDFD96", "#F47174",  "#93CAED"]}          
        },
  


      "tooltip": [
        {"field": "Year", "type": "nominal", "title": "Year"},
        {"field": "Month", "type": "ordinal", "title": "Month"},
        {"field": "NewReferrals", "type": "quantitative", "title": "New Referals"}
      ]
}
}
]

}
